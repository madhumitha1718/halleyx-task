    ];

    function showHome() {
      app.innerHTML = `
        <h2>Register to Hartha Mart</h2>
        <input type="text" placeholder="Full Name" id="name" />
        <input type="email" placeholder="Email" id="email" />
        <input type="password" placeholder="Password" id="password" />
        <button onclick="register()">Register</button>
      `;
    }

    function register() {
      user.name = document.getElementById("name").value;
      user.email = document.getElementById("email").value;
      user.password = document.getElementById("password").value;
      showDashboard();
    }

    function showDashboard() {
      app.innerHTML = `
        <h2>Welcome Hartha World</h2>
        <div class="search-bar">
      <input type="text" placeholder="ðŸ”Search products...">
      </div>

        <button onclick="showProfile()">Profile</button>
        <button onclick="showCategories()">Products</button>
        <button onclick="showWishlist()">Wishlist (${wishlist.length})</button>
        <button onclick="showOrders()">Orders (${orders.length})</button>

        <div class="section">
          <h3>Today's Offers</h3>
          <div class="offers-grid">
            ${offers.map(o => `
              <div class="offer-box" onclick="showProducts('${o.category}')">
                <img src="${o.image}" alt="" />
                <p>${o.text}</p>
              </div>
            `).join('')}
          </div>
        </div>
      `;
    }

    function showProfile() {
      app.innerHTML = `
        <h2>Profile</h2>
        <p><strong>Name:</strong> ${user.name}</p>
        <p><strong>Email:</strong> ${user.email}</p>
        <button onclick="showDashboard()">Back</button>
        <button onclick="showHome()">Logout</button>
      `;
    }

    function showCategories() {
      app.innerHTML = `
        <h2>Select a Category</h2>
        ${Object.keys(categories).map(cat => `
          <button onclick="showProducts('${cat}')">${cat}</button>
        `).join('')}
        <button onclick="showDashboard()">Back</button>
      `;
    }

    function showProducts(category) {
      const products = categories[category];
      app.innerHTML = `
        <h2>${category} Products</h2>
        ${products.map(p => `
          <div class="product">
            <img src="${p.image}" />
            <div>
              <h4>${p.name}</h4>
              <p>$${p.price}</p>
              <button onclick="addOrder('${category}', '${p.name}')">Buy Now</button>
              <span class="heart ${wishlist.find(w => w.name === p.name) ? 'liked' : ''}" onclick="toggleWishlist('${category}', '${p.name}', this)">&#10084;</span>
            </div>
          </div>
        `).join('')}
        <button onclick="showCategories()">Back</button>
      `;
    }

    function toggleWishlist(category, productName, el) {
      const product = categories[category].find(p => p.name === productName);
      const exists = wishlist.find(w => w.name === product.name);
      if (exists) {
        wishlist = wishlist.filter(w => w.name !== product.name);
        el.classList.remove("liked");
      } else {
        wishlist.push(product);
        el.classList.add("liked");
      }
    }

    function addOrder(category, productName) {
      const product = categories[category].find(p => p.name === productName);
      orders.push(product);
      alert("Order placed for " + product.name);
    }

    function showWishlist() {
      app.innerHTML = `
        <h2>Wishlist (${wishlist.length})</h2>
        ${wishlist.map(p => `
          <div class="product">
            <img src="${p.image}" />
            <div>
              <h4>${p.name}</h4>
              <p>$${p.price}</p>
              <button onclick="addOrderFromWishlist('${p.name}')">Buy Now</button>
            </div>
          </div>
        `).join('') || '<p>No items in wishlist.</p>'}
        <button onclick="showDashboard()">Back</button>
      `;
    }

    function addOrderFromWishlist(name) {
      const p = wishlist.find(i => i.name === name);
      orders.push(p);
      alert("Ordered " + p.name);
    }

    function showOrders() {
      app.innerHTML = `
        <h2>Your Orders (${orders.length})</h2>
        ${orders.map(p => `
          <div class="product">
            <img src="${p.image}" />
            <div>
              <h4>${p.name}</h4>
              <p>$${p.price}</p>
            </div>
          </div>
        `).join('') || '<p>No orders yet.</p>'}
        <button onclick="showDashboard()">Back</button>
      `;
    }

    showHome();
  </script>
